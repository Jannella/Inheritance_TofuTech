<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgbg">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imagePoring"
        android:layout_width="161dp"
        android:layout_height="220dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@drawable/poring" />

    <Spinner
        android:id="@+id/monsterClassResult"
        android:layout_width="140dp"
        android:layout_height="33dp"
        android:fontFamily="@font/font"
        android:spinnerMode="dropdown"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/monsterlvl"
        app:layout_constraintTop_toTopOf="@+id/Classtxt"></Spinner>


    <EditText
        android:id="@+id/monsterlvl"
        android:layout_width="104dp"
        android:layout_height="33dp"
        android:layout_marginEnd="64dp"
        android:ems="10"
        android:inputType="number"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/monsterLevel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/monsterLevel"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Classtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/font"
        android:text="Class:"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/monsterLevel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/monsterLevel"
        app:layout_constraintTop_toBottomOf="@+id/monsterLevel" />

    <TextView
        android:id="@+id/monsterLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font"
        android:text="Level:"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.172"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.422" />

    <TextView
        android:id="@+id/monsterHP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/font"
        android:text="Health"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/monsterLevel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/monsterLevel"
        app:layout_constraintTop_toBottomOf="@+id/Classtxt" />

    <TextView
        android:id="@+id/monsterHPresult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font"
        android:text="-!-"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.757"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/monsterHP"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>